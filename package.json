{
  "name": "supermarket-pos",
  "version": "1.0.0",
  "description": "Advanced Point of Sale system for supermarkets with offline functionality and cloud backups",
  "main": "electron/main.js",
  "scripts": {
    "start": "cd server && node index.js",
    "start-react": "cd client && npm start",
    "dev": "concurrently \"npm run start\" \"npm run start-react\"",
    "electron": "electron .",
    "build": "cd client && npm run build && cd .. && electron-builder",
    "build-client": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "test": "cd server && npm test"
  },
  "keywords": ["pos", "supermarket", "electron", "react", "nodejs", "sqlite"],
  "author": "Supermarket POS Team",
  "license": "MIT",
  "build": {
    "appId": "com.supermarket.pos",
    "productName": "Supermarket POS",
    "files": [
      "server/**/*",
      "client/build/**/*",
      "electron/**/*",
      "db/pos.db",
      "!**/node_modules/**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "node-thermal-printer": "^4.1.2",
    "node-schedule": "^2.1.1",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.2"
  }
}
